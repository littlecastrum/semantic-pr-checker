{
  "name": "semantic-pr-checker",
  "version": "1.0.0",
  "private": true,
  "description": "Set semantic rules for your PR and verify they are enforced",
  "author": "Daniel Castrillo <littlecatrum@gmail.com>",
  "license": "ISC",
  "repository": "https://github.com/littlecatrum/semantic-pr-checker.git",
  "homepage": "https://github.com/littlecatrum/semantic-pr-checker",
  "bugs": "https://github.com/littlecatrum/semantic-pr-checker/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "probot run ./index.js",
    "lint": "eslint lib --fix",
    "test": "jest && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "dedent": "^0.7.0",
    "eslint-plugin-prettier": "^3.1.2",
    "probot": "^9.5.3",
    "probot-config": "^1.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-community": "^1.4.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "husky": "^4.2.3",
    "jest": "^24.9.0",
    "lint-staged": "^10.1.1",
    "nock": "^12.0.0",
    "nodemon": "^2.0.0",
    "prettier": "^2.0.2",
    "smee-client": "^1.1.0"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  }
}
